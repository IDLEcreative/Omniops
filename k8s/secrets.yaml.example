# IMPORTANT: This is a template file. DO NOT commit actual secrets to Git!
#
# To use:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Replace all placeholder values with actual secrets
# 3. Apply to cluster: kubectl apply -f secrets.yaml
# 4. Add secrets.yaml to .gitignore
#
# For production, use Sealed Secrets or External Secrets Operator

apiVersion: v1
kind: Secret
metadata:
  name: omniops-secrets
  namespace: omniops
  labels:
    app: omniops
    app.kubernetes.io/name: omniops
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # Supabase Secrets
  NEXT_PUBLIC_SUPABASE_ANON_KEY: "your-supabase-anon-key-here"
  SUPABASE_SERVICE_ROLE_KEY: "your-supabase-service-role-key-here"
  SUPABASE_JWT_SECRET: "your-supabase-jwt-secret-here"

  # OpenAI API
  OPENAI_API_KEY: "sk-your-openai-api-key-here"

  # Database (if using external PostgreSQL)
  DATABASE_URL: "postgresql://user:password@host:5432/database?sslmode=require"

  # Encryption Keys
  ENCRYPTION_KEY: "your-256-bit-encryption-key-here"
  BACKUP_ENCRYPTION_KEY: "your-backup-encryption-key-here"

  # External Service Keys (if applicable)
  STRIPE_SECRET_KEY: "sk_live_your-stripe-key-here"
  SENDGRID_API_KEY: "SG.your-sendgrid-key-here"
  CLOUDFLARE_API_TOKEN: "your-cloudflare-token-here"

  # Monitoring & Analytics (optional)
  SENTRY_DSN: "https://your-sentry-dsn@sentry.io/project-id"
  DATADOG_API_KEY: "your-datadog-api-key-here"
  NEW_RELIC_LICENSE_KEY: "your-newrelic-key-here"

  # OAuth Providers (optional)
  GITHUB_CLIENT_ID: "your-github-client-id"
  GITHUB_CLIENT_SECRET: "your-github-client-secret"
  GOOGLE_CLIENT_ID: "your-google-client-id"
  GOOGLE_CLIENT_SECRET: "your-google-client-secret"

