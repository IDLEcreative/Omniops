#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# 1. File length validation (only check staged files)
echo "\nğŸ“ Checking file lengths (300 LOC limit)..."
npx tsx scripts/check-file-length.ts --staged --strict
if [ $? -ne 0 ]; then
  echo "âŒ File length check failed. Please refactor files exceeding 300 LOC."
  echo "   Run 'npx tsx scripts/check-file-length.ts --fix' for suggestions."
  exit 1
fi

# 2. Root directory clutter check
echo "\nğŸ—‚ï¸  Checking for misplaced files in root directory..."
npx tsx scripts/check-root-clutter.ts --staged
if [ $? -ne 0 ]; then
  echo "âŒ Root directory check failed. Files are in the wrong location."
  echo "   See CLAUDE.md 'FILE PLACEMENT RULES' for correct locations."
  exit 1
fi

# 3. Type checking (disabled due to memory issues with large Next.js projects)
# TODO: Re-enable with incremental compilation or smaller chunks
# echo "\nğŸ” Running TypeScript type check..."
# npx tsc --noEmit
# if [ $? -ne 0 ]; then
#   echo "âŒ Type check failed. Please fix TypeScript errors."
#   exit 1
# fi
echo "\nğŸ” TypeScript type check: SKIPPED (memory constraints)"

# 4. Linting (disabled for faster commits - run manually with npm run lint)
# echo "\nğŸ§¹ Running ESLint..."
# npm run lint
# if [ $? -ne 0 ]; then
#   echo "âŒ Linting failed. Please fix ESLint errors."
#   exit 1
# fi
echo "\nğŸ§¹ ESLint: SKIPPED (run 'npm run lint' manually)"

# 5. Run critical tests (disabled for faster commits - run manually with npm test)
# echo "\nğŸ§ª Running tests..."
# npm test -- --bail --passWithNoTests
# if [ $? -ne 0 ]; then
#   echo "âŒ Tests failed. Please fix failing tests before committing."
#   exit 1
# fi
